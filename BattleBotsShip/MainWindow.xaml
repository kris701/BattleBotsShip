<Window x:Class="BattleBotsShip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleBotsShip"
        xmlns:usercontrols="clr-namespace:BattleBotsShip.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5" Grid.ColumnSpan="2">
            <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" Width="100"/>
            <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click" Width="100" IsEnabled="False"/>
            <StackPanel x:Name="DisablableSettings" Orientation="Horizontal">
                <Label Content="Rounds:"/>
                <TextBox x:Name="RoundsTextbox" Text="1" Width="100" VerticalContentAlignment="Center" PreviewTextInput="NumbersOnly_TextChanged"/>
                <CheckBox x:Name="VisualizeCheckbox" Content="Visualize" VerticalAlignment="Center" IsChecked="True"/>
                <Label Content="Refresh Rate:"/>
                <TextBox x:Name="RefreshRateTextbox" Text="100" Width="100" VerticalContentAlignment="Center" PreviewTextInput="NumbersOnly_TextChanged"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="ResultsPanel" Grid.Row="1">
            <Label Content="Results"/>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <usercontrols:VisualBoardModel x:Name="VisualAttackerModel" Margin="10" Background="LightGray"/>
            <usercontrols:VisualBoardModel x:Name="VisualDefenderModel" Grid.Row="1" Margin="10" Background="LightGray"/>

        </Grid>

    </Grid>
</Window>
