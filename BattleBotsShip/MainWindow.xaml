<Window x:Class="BattleBotsShip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleBotsShip"
        xmlns:usercontrols="clr-namespace:BattleBotsShip.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" Width="100"/>
            <Label Content="Rounds:"/>
            <TextBox x:Name="RoundsTextbox" Text="1" Width="100" VerticalContentAlignment="Center" TextChanged="RoundsTextbox_TextChanged"/>
            <CheckBox x:Name="Visualize" Content="Visualize" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel x:Name="ResultsPanel" Grid.Row="1">
            <Label Content="Results"/>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <usercontrols:VisualBoardModel x:Name="VisualAttackerModel"/>
            <usercontrols:VisualBoardModel x:Name="VisualDefenderModel"/>

        </Grid>

    </Grid>
</Window>
