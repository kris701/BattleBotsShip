<UserControl x:Class="BattleBotsShip.Views.UserControls.FileSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleBotsShip.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="3">
            <Button x:Name="ReloadButton" Content="Reload" Click="ReloadButton_Click"/>
            <Button x:Name="SelectAllButton" Content="Select All" Click="SelectAllButton_Click"/>
            <Button x:Name="UnSelectAllButton" Content="Unselect All" Click="UnSelectAllButton_Click"/>
        </StackPanel>
        
        <ScrollViewer Grid.Row="1" Background="Gray">
            <TreeView x:Name="LayoutSelector" Margin="5"/>
        </ScrollViewer>
    </Grid>
</UserControl>
